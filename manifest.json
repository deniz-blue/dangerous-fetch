{
	"$schema": "https://www.schemastore.org/chrome-manifest.json",
	"version": "0.1",
	"manifest_version": 3,
	"name": "Dangerous Fetch",
	"description": "Allow web apps to do dangerous API calls",
	"action": {
		"default_popup": "src/pages/popup/index.html",
		"default_icon": {
			"32": "icon-32.png"
		}
	},
	"icons": {
		"128": "icon-128.png"
	},
	"permissions": [
		"activeTab"
	],
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*",
				"<all_urls>"
			],
			"js": [
				"src/pages/content/index.tsx"
			],
			"run_at": "document_start"
		}
	],
	"host_permissions": [
		"http://*/*",
		"https://*/*",
		"<all_urls>"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"*"
			],
			"matches": [
				"http://*/*",
				"https://*/*",
				"<all_urls>"
			]
		}
	],
	"externally_connectable": {
		"matches": [
			"http://*/*",
			"https://*/*",
			"<all_urls>"
		]
	}
}